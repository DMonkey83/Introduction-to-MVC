@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "New Moview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="medium-6 cell">
                @Html.LabelFor(model => model.ReleaseDate)
                @Html.TextBoxFor(model => model.ReleaseDate, "{0:d MM yyyy}")
            </div>
            <div class="medium-6 cell">
                @Html.LabelFor(m => m.GenreId)
                @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), "Select Genre", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GenreId)
            </div>
            <div class="medium-6 cell">
                @Html.LabelFor(model => model.NumberInStock)
                @Html.TextBoxFor(model => model.NumberInStock)
                @Html.ValidationMessageFor(model => model.NumberInStock)
            </div>
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()
            <button class="hollow button medium-2" type="submit" >@Model.Button</button>
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

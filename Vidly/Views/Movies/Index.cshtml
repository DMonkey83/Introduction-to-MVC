@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Movies</h3>
<hr/>
@if (!Model.Any())
{
    <p>No Movies yet</p>
}
else
{

    <table>
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Details" + "/" + @movie.Id, "Movies")</td>
                <td>@($"{movie.Genre.GenreName}")</td>
                
            </tr>
        }
        
        </tbody>
    </table>

}

@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<hr />
<h3>@Model.Name</h3>
  <p>Membership Type: @Model.MembershipType.Name</p>
@if (@Model.BirthDate != null)
{
<p>Date of Birth: @Model.BirthDate.Value.Date.ToString("D")</p>
}